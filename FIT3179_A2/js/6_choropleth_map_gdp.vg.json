{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 350,
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2008,
        "max": 2022,
        "step": 1,
        "name": "Year:  "
      }
    },
    {
      "name": "zoom_level",
      "value": 130,
      "bind": {
        "input": "range",
        "min": 130,
        "max": 1000,
        "step": 1,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0,0],
      "bind": {
        "input": "select",
        "options": [
          [0,0],
          [20,10],
          [100,35],
          [40, 50],
          [-95, 45],
          [135,-25],
          [-60,-15]
        ],
        "labels": [
          "Whole Map",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": { "expr": "center_to" },
    "scale": { "expr": "zoom_level" }
  },
  "config": {
    "text": { "font": "Roboto" },
    "background": "transparent",
    "axis": {
      "labelFont": "Roboto",
      "titleFont": "Roboto",
      "labelFontSize": 12,
      "titleFontSize": 14,
      "grid": false
    },
    "legend": { "labelFont": "Roboto", "titleFont": "Roboto" },
    "view": { "stroke": null }
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#c9daf8",
        "stroke": null
      },
      "data": {
        "sphere": true
      }
    },
    {
      "data": {
        "graticule": true
      },
      "mark": {
        "type": "geoshape",
        "stroke": "gray",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/pigsham/FIT3179-DataViz/refs/heads/main/Homework_Week10/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/pigsham/FIT3179-DataViz/refs/heads/main/FIT3179_A2/data/tourism-gdp-proportion-of-total-gdp.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "lookup": "Country_Code",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/pigsham/FIT3179-DataViz/refs/heads/main/Homework_Week10/js/ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.ISO_A3_EH"
          },
          "as": "geo"
        },
        {
          "filter": "datum.GDP_Percentage > 0"
        },
        {
          "filter": "datum.Year == Year_selection"
        }
      ],      "layer":[
        {"mark": {"type": "geoshape", "cursor":"pointer", "stroke": "#908d8d", "strokeWidth": 0.5}}
    ],
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "GDP_Percentage",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 2, 3, 4, 5, 6],
            "range": ["#d0eff3", "#aedecd", "#7cc4b1", "#58aa8f", "#368f63", "#1e7338", "#004e20"]
          },
          "legend":
          {
            "title": "Tourism GDP (% of Total GDP)",
            "orient": "top"
          }
        },
        "tooltip": [
          {
            "field": "Country_Name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "GDP_Percentage",
            "type": "quantitative",
            "title": "Tourism GDP (% of Total GDP)",
            "format": ".2f"
          },
          {
            "field": "Year",
            "type": "quantitative",
            "title": "Year"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/pigsham/FIT3179-DataViz/refs/heads/main/FIT3179_A2/data/continents.csv"
      },
      "mark": {
        "type": "text",
        "color": "black",
        "fontWeight": "bolder",
        "fontSize": 11
      },
      "encoding": {
        "text": { "field": "Continent", "type": "nominal" },
        "latitude": { "field": "Latitude", "type": "quantitative" },
        "longitude": { "field": "Longitude", "type": "quantitative" }
      }
    }
  ]
} 