{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 350,
  "height": 250,
  "data": {
    "url":"https://raw.githubusercontent.com/pigsham/FIT3179-DataViz/refs/heads/main/FIT3179_A2/data/transportation_preferences.csv"
  },
  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" }
  },
  "transform": [
    {
      "window": [{"op": "sum", "field": "Count", "as": "Total"}],
      "frame": [null, null]
    },
    {
      "calculate": "datum.Count / datum.Total * 100",
      "as": "Percentage"
    },
    {
      "calculate": "round(datum.Percentage) + '%' ",
      "as": "Percentage_with_sign"
    }
  ],
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"},
    "encoding": {
      "tooltip":[
        {"field": "Transportation Type", "type": "nominal", "title": "Transportation Type"},
        {"field": "Percentage_with_sign", "type": "nominal", "title": "Percentage"}
      ]
    }
  },{
    "mark": {"type": "text", "radiusOffset": 22},
    "encoding": {
      "text": {"field": "Transportation Type", "type": "nominal"},
      "tooltip":[
        {"field": "Transportation Type", "type": "nominal", "title": "Transportation Type"},
        {"field": "Percentage_with_sign", "type": "nominal", "title": "Percentage"}
      ]
    }
  }],
  "encoding": {
    "theta": {"field": "Count", "type": "quantitative", "stack": true},
    "radius": {"field": "Count", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}},
    "color": {
      "field": "Transportation Type",
      "type": "nominal",
      "scale": {
        "domain": ["Ferry", "Bus", "Car rental", "Train", "Flight"],
        "range":["#7fcdbb", "#41b6c4", "#1d91c0", "#225ea8", "#0c2c84"]
      },
      "legend": null
    }
  }
}