{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple radial chart with embedded data.",
  "width": 350,
  "height": 250,
  "data": {
    "url":"https://raw.githubusercontent.com/pigsham/FIT3179-DataViz/refs/heads/main/FIT3179_A2/data/cleaned_airports_data_with_region.csv"
  },
  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" }
  },
  "params": [
    {
      "name": "flights_no_min",
      "value": 10,
      "bind": {"input": "range", "min": 0, "max": 40, "step": 1, "name": "Minimum flights"}
    },
    {
      "name": "flights_no_max",
      "value": 40,
      "bind": {"input": "range", "min": 0, "max": 40, "step": 1, "name": "Maximum flights"}
    },
    {
      "name": "region_selection",
      "bind":{
        "input": "select",
        "options": [null, "Asia", "Europe", "North America", "Oceania", "South America"],
        "labels": ["All Regions", "Asia", "Europe", "North America", "Oceania", "South America"],
        "name": "Region: "
      }
    }
  ],
  "transform": [
    {
      "filter": {"field": "Flights", "range": [{"expr": "flights_no_min"}, {"expr": "flights_no_max"}]}
    },
    {"filter": "region_selection == null || datum.Region == region_selection"}
  ],
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"},
    "encoding": {
      "tooltip":[
        {"field": "Airport_Name", "type": "nominal", "title": "Airport Name"},
        {"field": "Flights", "type": "quantitative", "title": "Number of Flights"}
      ]
    }
  },{
    "mark": {"type": "text", "radiusOffset": 10},
    "encoding": {
      "text": {"field": "Abbreviation", "type": "nominal"},
      "tooltip":[
        {"field": "Airport_Name", "type": "nominal", "title": "Airport Name"},
        {"field": "Flights", "type": "quantitative", "title": "Number of Flights"}
      ]
    }
  }],
  "encoding": {
    "theta": {"field": "Flights", "type": "quantitative", "stack": true},
    "radius": {"field": "Flights", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}},
    "color": {
      "field": "Airport_Name",
      "type": "nominal",
      "scale": {
        "range": ["#fbb4b9","#f768a1","#c51b8a","#7a0177"]
      },
      "legend": null
    }
  }
}