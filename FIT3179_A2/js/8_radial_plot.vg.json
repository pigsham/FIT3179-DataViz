{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Transportation Preferences",
  "width": 350,
  "height": 250,
  "data": {
    "url":"https://raw.githubusercontent.com/pigsham/FIT3179-DataViz/refs/heads/main/FIT3179_A2/data/transportation_preferences.csv"
  },
  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" }
  },
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"},
    "encoding": {
      "tooltip":[
        {"field": "Transportation Type", "type": "nominal", "title": "Airport Name"},
        {"field": "Count", "type": "quantitative", "title": "Number of Flights"}
      ]
    }
  },{
    "mark": {"type": "text", "radiusOffset": 10},
    "encoding": {
      "text": {"field": "Transportation Type", "type": "nominal"},
      "tooltip":[
        {"field": "Transportation Type", "type": "nominal", "title": "Airport Name"},
        {"field": "Count", "type": "quantitative", "title": "Number of Flights"}
      ]
    }
  }],
  "encoding": {
    "theta": {"field": "Count", "type": "quantitative", "stack": true},
    "radius": {"field": "Count", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}},
    "color": {
      "field": "Transportation Type",
      "type": "nominal",
      "scale": {
        "range": ["#fbb4b9","#f768a1","#c51b8a","#7a0177"]
      },
      "legend": null
    }
  }
}