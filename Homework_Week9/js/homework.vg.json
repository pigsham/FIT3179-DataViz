{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Z-Score Normalized Tourism Revenue by Country (2010 - 2020)",
      "fontSize": 20,
      "anchor": "middle"
    },
    "width": 800,
    "height": 600,
    "projection": {
      "type": "equalEarth"
    },
    "data": {
      "url": "ne_110m.json",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries"
      }
    },
    "transform": [
      {
        "lookup": "properties.NAME",  
        "from": {
          "data": {
            "url": "average_tourism_revenue_by_country.csv",  
            "format": {"type": "csv"}
          },
          "key": "Country_Name",  
          "fields": ["Z_Score_Normalized"]  
        }
      }
    ],
    "mark": {
      "type": "geoshape",
      "stroke": "white",
      "strokeWidth": 0.5
    },
    "encoding": {
      "color": {
        "field": "Z_Score_Normalized",  
        "type": "quantitative",
        "scale": {
          "type": "linear",
          "scheme": "blues"
        }
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Z_Score_Normalized", "type": "quantitative", "title": "Z-Score Normalized Revenue"}
      ]
    }
  }